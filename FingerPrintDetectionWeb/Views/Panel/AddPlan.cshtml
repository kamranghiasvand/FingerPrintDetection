@model FingerPrintDetectionWeb.Models.PlanViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"></h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <a href="javascript:void(0);" class="toggle-sidebar">
                        <span class="fa fa-angle-double-left" data-toggle="offcanvas" title="Maximize Panel"></span>
                    </a> ایجاد پلن
                </h3>
            </div>
            <div class="panel-body">
                <form role="form" id="addPlanForm" data-url="@Url.Action("AddPlan", "Panel")" method="post">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 validation-summary-errors hidden" style="color: red;" data-valmsg-summary="true">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group required">
                                <label for="name" class="control-label">نام</label>
                                <input type="text" class="form-control" id="name" name="Name" placeholder="نام">
                            </div>
                            <div class="form-group required">
                                <label for="repeatNumber" class="control-label">تعداد تکرار</label>
                                <input type="number" class="form-control" id="repeatNumber" name="RepeatNumber" placeholder="تعداد تکرار">
                            </div>
                            <div class="form-group required">
                                <label for="maxUserCount" class="control-label">حداکثر تعداد کاربران</label>
                                <input type="number" class="form-control" id="maxUserCount" name="MaxUserCount" placeholder="حداکثر  تعداد">
                            </div>
                            <div class="form-group">
                                <label for="description" class="control-label">توضیحات</label>
                                <textarea class="form-control" id="description" name="Description" rows="3" placeholder="توضیحات"></textarea>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <div class="bootstrap-timepicker">
                                        <div class="form-group">
                                            <label>زمان شروع</label>
                                            <div class="input-group">
                                                <input id="schedulerDailyStartTimepicker" type="text" class="form-control required" name="StartTime">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-clock-o"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <div class="bootstrap-timepicker">
                                        <div class="form-group">
                                            <label>زمان پایان</label>
                                            <div class="input-group">
                                                <input id="schedulerDailyEndTimepicker" name="EndTime" type="text" class="form-control required">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-clock-o"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xl-12">

                            <button type="submit" class="btn btn-success ">ایجاد پلن</button>
                        </div>
                    </div>

                </form>

            </div><!-- panel body -->
        </div>
    </div>
</div>
    @section scripts{
        <script src="~/Scripts/Views/Panel/AddPlan.js"></script>
    }
