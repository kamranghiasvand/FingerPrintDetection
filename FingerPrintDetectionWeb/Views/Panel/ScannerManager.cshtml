@model dynamic

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-6 col-lg-6 col-sm-6 col-xs-6">
        <form action="@Url.Action("StartScannerManager", "Panel")" method="post">
            <input type="submit" class="btn btn-success"/>
        </form>
    </div>
    <div class="col-lg-6 col-lg-6 col-sm-6 col-xs-6">
        <form action="@Url.Action("StopScannerManager", "Panel")" method="post">
            <input type="submit" class="btn btn-danger"/>
        </form>
    </div>
</div>
<div class=""></div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست کاربران
            </div>
            <div class="panel-body">
                <div class="">
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" width="100%"
                           data-url="@Url.Action("GetScannersListAsync", "Panel")"
                           id="ScannerdataTables"></table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/Views/Panel/ScannerManager.js"></script>
}