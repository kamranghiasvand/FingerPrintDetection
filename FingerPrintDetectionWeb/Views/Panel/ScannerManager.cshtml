@using FingerPrintDetectionWeb.Manager
@model dynamic

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"></h1>
    </div>
</div>
<div class="row">
    <div class="panel">
        <div class="panel-body">
            @{var c = ScannerManagerConnector.Create().IsRunning ? "alert-success" : "alert-danger";}
            <div class="col-lg-12 col-lg-12 col-sm-12 col-xs-12 alert @c">
                <form action="@Url.Action("ToggleScannerManager", "Panel")" style="padding-right:50%" method="post" id="toggleScannerManagerForm">
                    <input type="submit" class="btn btn-lg " value="@(ScannerManagerConnector.Create().IsRunning ? "توقف" : "راه اندازی" )" />
                </form>
            </div>

        </div>
    </div>
</div>
<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">
            لیست سنسورها
        </div>
        <div class="panel-body">
            <div class="">
                <table class="table table-striped table-bordered table-hover dataTable no-footer" width="100%"
                       data-url="@Url.Action("GetScannersListAsync", "Panel")"
                       id="ScannerdataTables"></table>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/Views/Panel/ScannerManager.js"></script>
}
